{
  "name": "redux-tutorial",
  "version": "1.0.0",
  "description": "Redux/React tutorial",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bundle": "browserify  -t babelify src/scripts/index.jsx -o build/index.js",
    "watchify": "watchify -t babelify src/scripts/index.jsx -o build/index.js -dv",
    "sass": "node-sass src/styles/main.scss ./build/main.css",
    "watch-sass": "node-sass src/styles/main.scss ./build/main.css -w /src/styles/**/*.scss",
    "copy-index": "copyup src/index.html build",
    "watch-index": "nodemon -q -w src/index.html --exec 'npm run inject-index'",
    "inject-index": "cat src/index.html | htmlinjectscript '//localhost:9091' > build/index.html",
    "server": "http-server -p 4000 ./build -o",
    "live-reload": "live-reload --port 9091 build/",
    "build": "parallelshell 'npm run copy-index' 'npm run bundle' 'npm run sass'",
    "build-dev": "parallelshell 'npm run inject-index' 'npm run bundle' 'npm run sass'",
    "start": "npm run build-dev && parallelshell 'npm run watchify' 'npm run watch-sass' 'npm run watch-index' 'npm run server -s' 'npm run live-reload -s'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrArnoldPalmer/redux-tutorial.git"
  },
  "author": "Mitchell Valine",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MrArnoldPalmer/redux-tutorial/issues"
  },
  "homepage": "https://github.com/MrArnoldPalmer/redux-tutorial#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "copyfiles": "^0.2.1",
    "html-inject-script": "^1.1.0",
    "http-server": "^0.8.5",
    "live-reload": "^1.1.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "redux": "^3.0.5",
    "should": "^8.0.2",
    "watchify": "^3.6.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  }
}
